<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WelcomeActivity"
    android:background="@color/BackgroundDarkColor">

    <!-- Background Image with Overlay -->
    <ImageView
        android:id="@+id/welcome_background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/welcome_image"
        android:alpha="0.5" />

    <!-- Gradient Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_style_01"/>

    <!-- Logo Section -->
    <LinearLayout
        android:id="@+id/logo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <!-- Tagline Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_container"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Personal"
            android:textAlignment="center"
            android:textColor="@color/LightTextColor"
            android:textSize="32sp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fitness Coach"
            android:textAlignment="center"
            android:textColor="@color/LightTextColor"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Track your fitness journey, connect with others, and achieve your goals."
            android:textAlignment="center"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"/>

    </LinearLayout>

    <!-- Buttons Section -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="48dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/welcome_signup_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button_style_01"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textColor="@color/ButtonTextColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/register_facebook_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_style_02"
            android:text="I already have an account"
            android:textAllCaps="false"
            android:textColor="@color/LightTextColor"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>
