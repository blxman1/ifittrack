<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundSecondaryColor"
    tools:context=".fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- HERO HEADER WITH GRADIENT -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@drawable/profile_hero_gradient">

                <!-- Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_user_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/profile_image_placeholder"
                    app:civ_border_width="4dp"
                    app:civ_border_color="@color/CardBackgroundColor"/>

                <!-- Username and Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_user_image"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:textAlignment="center"
                        android:textColor="@color/LightTextColor"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/profile_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="position"
                        android:textAlignment="center"
                        android:textColor="#E0FFFFFF"
                        android:textSize="14sp"/>

                </LinearLayout>

            </RelativeLayout>

            <!-- STATS CARDS ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="-35dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Points Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/modern_card_elevated"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/profile_points_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/silver_medal_icon"/>

                    <TextView
                        android:id="@+id/profile_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/TitleTextColor"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Points"
                        android:textColor="@color/SecondaryTextColor"
                        android:textSize="12sp"/>

                </LinearLayout>

                <!-- Badge Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/modern_card_elevated"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/profile_badge"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/silver_medal_icon"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/profile_badge_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Silver"
                        android:textAlignment="center"
                        android:textColor="@color/TitleTextColor"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Member"
                        android:textColor="@color/SecondaryTextColor"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- USER INFO CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/modern_card_elevated"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/SecondaryTextColor"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:text="email@example.com"
                    android:textColor="@color/TitleTextColor"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/DividerColor"/>

                <!-- Stats Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/profile_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- kg"
                            android:textColor="@color/TitleTextColor"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Weight"
                            android:textColor="@color/SecondaryTextColor"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/DividerColor"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/profile_height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- cm"
                            android:textColor="@color/TitleTextColor"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Height"
                            android:textColor="@color/SecondaryTextColor"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/DividerColor"/>

                <!-- Additional Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/profile_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/TitleTextColor"
                            android:textSize="13sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Gender"
                            android:textColor="@color/SecondaryTextColor"
                            android:textSize="11sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/DividerColor"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/profile_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/TitleTextColor"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Birthday"
                            android:textColor="@color/SecondaryTextColor"
                            android:textSize="11sp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/DividerColor"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/profile_activity_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/TitleTextColor"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Activity"
                            android:textColor="@color/SecondaryTextColor"
                            android:textSize="11sp"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/DividerColor"/>

                <!-- Joined Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member since"
                        android:textColor="@color/SecondaryTextColor"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/profile_joined_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="--"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

            <!-- ACTION BUTTONS -->
            <LinearLayout
                android:id="@+id/profile_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/profile_req_connection_button"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/pill_button_primary"
                    android:text="Connect"
                    android:textColor="@color/ButtonTextColor"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/profile_send_messages_button"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/pill_button_outline"
                    android:text="Message"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- MENU CARD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/modern_card_elevated"
                android:orientation="vertical"
                android:padding="4dp">

                <RelativeLayout
                    android:id="@+id/profile_messages_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/msg_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/messages_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/msg_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="Messages"
                        android:textColor="@color/PrimaryTextColor"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menu_item_end_icon"
                        android:tint="@color/IconColor" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="54dp"
                    android:background="@color/DividerColor" />

                <RelativeLayout
                    android:id="@+id/profile_find_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/find_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/find_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/find_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="Find"
                        android:textColor="@color/PrimaryTextColor"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menu_item_end_icon"
                        android:tint="@color/IconColor" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="54dp"
                    android:background="@color/DividerColor" />

                <RelativeLayout
                    android:id="@+id/profile_connections_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/conn_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/connections_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/conn_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="Connections"
                        android:textColor="@color/PrimaryTextColor"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menu_item_end_icon"
                        android:tint="@color/IconColor" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="54dp"
                    android:background="@color/DividerColor" />

                <RelativeLayout
                    android:id="@+id/profile_services_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/serv_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/services_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/serv_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="Services"
                        android:textColor="@color/PrimaryTextColor"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menu_item_end_icon"
                        android:tint="@color/IconColor" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="54dp"
                    android:background="@color/DividerColor" />

                <RelativeLayout
                    android:id="@+id/profile_services_manager_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/man_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/manager_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/man_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="Manager"
                        android:textColor="@color/PrimaryTextColor"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menu_item_end_icon"
                        android:tint="@color/IconColor" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="54dp"
                    android:background="@color/DividerColor" />

                <RelativeLayout
                    android:id="@+id/profile_orders_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/ord_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/orders_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/ord_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="Orders"
                        android:textColor="@color/PrimaryTextColor"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menu_item_end_icon"
                        android:tint="@color/IconColor" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="54dp"
                    android:background="@color/DividerColor" />

                <RelativeLayout
                    android:id="@+id/profile_request_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/req_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/request_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/req_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="Requests"
                        android:textColor="@color/PrimaryTextColor"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menu_item_end_icon"
                        android:tint="@color/IconColor" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="54dp"
                    android:background="@color/DividerColor" />

                <RelativeLayout
                    android:id="@+id/profile_post_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/post_icon_img"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/post_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/post_icon_img"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="Posts"
                        android:textColor="@color/PrimaryTextColor"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menu_item_end_icon"
                        android:tint="@color/IconColor" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="54dp"
                    android:background="@color/DividerColor" />

                <RelativeLayout
                    android:id="@+id/profile_nutrition_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/nut_icon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/nutrition_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/nut_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="Nutrition"
                        android:textColor="@color/PrimaryTextColor"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menu_item_end_icon"
                        android:tint="@color/IconColor" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="54dp"
                    android:background="@color/DividerColor" />

                <RelativeLayout
                    android:id="@+id/profile_diary_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/diary_icon_img"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/diary_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/diary_icon_img"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        android:text="Diary"
                        android:textColor="@color/PrimaryTextColor"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/menu_item_end_icon"
                        android:tint="@color/IconColor" />

                </RelativeLayout>

            </LinearLayout>

            <!-- LOGOUT BUTTON -->
            <RelativeLayout
                android:id="@+id/profile_logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/modern_card_elevated"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/logout_icon_img"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logout_icon"
