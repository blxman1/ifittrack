                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menu_item_end_icon"
                    android:tint="@color/WarningTextColor" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

